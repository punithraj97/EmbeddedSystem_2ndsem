package lambda;
import java.util.*;


interface example
{
	void average(Thread t,int size);
}

public class AverageThread extends Thread implements Runnable {
	
	static int size;
	static int num;
	static int average;
	static int arr[]=new int[size];
	static Random rand=new Random();
	
	AverageThread()
	{}
	
	
	public static void run(int siz)
	{
		size=siz;
		for(int i=0;i<size;i++)
		{
			num=rand.nextInt(10)+1;
			System.out.print(num+" ");
			arr[i]=num;
		}
		

		for(int i=0;i<size;i++)
			average+=arr[i];
		
		System.out.println("The average of" +size+ "numbers is "+ average);
	}

	public static void main(String[] args) {
		
		
		AverageThread t=new AverageThread();
		
		example ex=(n)->run(n);
		
		ex.average(10);
		
		
	}

}
